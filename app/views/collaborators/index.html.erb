<h1>Collaborator For <%= @wiki.title %></h1>
<table> 
 <% @users.each do |user| %>
          <div class="row">
            <div class="col-md-4">
              <h4 class="media-heading">
                <%= user.username %>
              </h4>
            </div>
            <div class="col-md-4">
              <% if @wiki.users.include?(user) %>
                <% collaborator = @wiki.collaborator_for(user) %>
                <%= link_to "Remove as collaborator", [@wiki, @collaborator], method: :delete, class: "btn btn-sm btn-danger" %>
                <br>
              <% else %>
                <%= link_to "Add as collaborator", wiki_collaborators_path( user_id: user.id), method: :post, class: "btn btn-sm btn-success" %>
                <br />
              <% end %>
            </div>
          </div>
          <hr>
        <% end %>
      </div>
    </div>
</div>


</table>
