<h1>This is all the Wikis</h1>

<div class="new-wiki">
<%= link_to "New Wiki", new_wiki_path, class: 'btn btn-success' %>

<h1>Free Wikis</h1>



<% @public_wikis.each do |wiki| %>
<div class="media">
     <div class="media-body">
       <h4 class="media-heading">
             </div>
         <% end %>
     </div>

<% if current_user.admin? || current_user.premium? %>
    <h1>Private Wikis</h1>
    
    <div class="row">
        <div class="col-md-8">
            <% @private_wikis.each do |wiki| %>
                <div class="media">
                    <div class="media-body">
                        <h4 class="media-heading">
                            <%= link_to wiki.title, wiki %>
                        </h4>
                    </div>
                </div>

        </div>
    </div>
                    
                <% else %>
                <p> You need to be log in for see this page</p>
            <% end %>
<% end %>